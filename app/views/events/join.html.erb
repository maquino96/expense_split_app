<h1> User search up </h1>

<% if flash[:user]%>

    <%= form_for @attendance do |f| %>
        <%= f.label :event_id %>
        <%= f.collection_select :event_id, @events, :id, :name%>
        <%= f.hidden_field :user_id, value: session[:user_id] %>
        <%= f.submit %>
    <% end %> 

<% else %> 

    <% flash[:user] = true %> 

    <%= form_tag "/handle_join" do %>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
        <%= submit_tag "Submit" %>
    <% end %>

<% end %>

<p> <%= link_to "Back to #{User.find(session[:user_id]).name}'s page", user_path(session[:user_id])%> </p>